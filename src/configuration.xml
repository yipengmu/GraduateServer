<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE configuration   
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!--给实体类起一个别名 user -->
		<typeAlias type="com.laomu.graduate.servlet.bean.UserBean" alias="User" />
		<typeAlias type="com.laomu.graduate.servlet.province.ProvinceBean" alias="ProvinceBean" />
	</typeAliases>
	<!--数据源配置  这块用 mysql数据库 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="jdbc" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3309/graduatedb?characterEncoding=UTF-8" />
				<property name="username" value="root" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!--userMapper.xml装载进来  同等于把“dao”的实现装载进来 -->
		<mapper resource="com/laomu/graduate/servlet/bean/userMapper.xml" />
		<mapper resource="com/laomu/graduate/servlet/province/provincemapper.xml" />
	</mappers>
</configuration> 